# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration (Required for production authentication)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Google OAuth Configuration (for client-side)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Google Cloud Platform OAuth (Set up in Supabase Auth settings)
# These are configured in your Supabase dashboard under Authentication > Providers > Google
# GCP_CLIENT_ID=your_google_client_id
# GCP_CLIENT_SECRET=your_google_client_secret

# Security Keys
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Content Moderation
CONTENT_MODERATION_API_KEY=your_moderation_api_key_here

# Analytics & Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
ENABLE_PARENTAL_CONTROLS=true
ENABLE_CONTENT_MODERATION=true
ENABLE_ANALYTICS=true

# Saudi-specific Configuration
SAUDI_CURRICULUM_API_KEY=your_curriculum_api_key_here
MOE_COMPLIANCE_MODE=true
